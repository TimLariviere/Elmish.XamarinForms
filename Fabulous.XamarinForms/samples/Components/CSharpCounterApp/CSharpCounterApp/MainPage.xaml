<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:local="clr-namespace:CSharpCounterApp;assembly=CSharpCounterApp"
             ios:Page.UseSafeArea="True"
             x:Class="CSharpCounterApp.MainPage">

    <StackLayout>
        <Label Text="Xamarin.Forms C# app" 
           HorizontalOptions="Center"
           FontSize="Title" />
        
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
            <Label Text="Total = " />
            <Label Text="{Binding Total}" />
        </StackLayout>
        
        <local:CounterView VerticalOptions="CenterAndExpand" Value="{Binding Counter1}" />
        <local:CounterView VerticalOptions="CenterAndExpand" Value="{Binding Counter2}" />
    </StackLayout>
</ContentPage>
